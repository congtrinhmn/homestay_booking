<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#666666</item>
    </style>

    <style name="TransparentCompat" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">#33646464</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="ChatSDKTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.ChatSDKTheme" parent="ChatSDKTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">#FAFAFA</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAzureRadiance</item>
    </style>

    <style name="AppButton">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/lato_heavy</item>
    </style>

    <style name="line">
        <item name="android:background">#fff6f6f6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_width">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_title_action_bar" parent="@style/wrap_content">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="CustomEditTextCursor">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="inputGroupLabel" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/luxstay_medium</item>
        <item name="android:drawableRight">@drawable/ic_star</item>
        <item name="android:textColor">@color/input_group_color_state</item>
    </style>

    <style name="inputGroupEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/colorTundora</item>
        <item name="android:textColorHint">@color/colorTundora30Percent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:theme">@style/CustomEditTextCursor</item>
    </style>

    <style name="inputGroupTextView">
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorTundora30Percent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:theme">@style/CustomEditTextCursor</item>
    </style>

    <style name="inputGroupBreakLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/bg_input_group_break_line</item>
    </style>

    <style name="inputGroupDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDustyGray</item>
        <item name="android:textSize">12dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="inputGroupError">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/input_group_color_state</item>
        <item name="android:textSize">12dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="text_date_in_search">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:fontFamily">@font/lato_heavy</item>
    </style>

    <style name="space">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_24dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_24dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_24dp</item>
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="textBlackBold">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorTextBack</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textBlackRegular">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorTextBack</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textBlackBoldWrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorTextBack</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textBlackRegularWrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorTextBack</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textGray">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textGrayWrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- RatingBar -->
    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_full</item>
        <item name="android:minHeight">13.4dp</item>
        <item name="android:maxHeight">13.4dp</item>
    </style>

    <style name="default_padding">
        <item name="android:paddingStart">@dimen/default_margin</item>
        <item name="android:paddingEnd">@dimen/default_margin</item>
    </style>


    <style name="CircleImageButtonStyle">
        <item name="android:background">@drawable/bg_circle</item>
        <item name="android:layout_width">@dimen/circle_icon_size</item>
        <item name="android:layout_height">@dimen/circle_icon_size</item>
    </style>

    <style name="EditTextStyleLogin" parent="@style/Theme.AppCompat.Light">
        <item name="colorAccent">#ff444953</item>
    </style>


    <style name="TextButtonGradient">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_gradient_enable</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:fontFamily">@font/luxstay_medium</item>
    </style>

    <style name="TextDayOfWeek">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/tulip_tree</item>
        <item name="fontFamily">@font/luxstay_bold</item>
    </style>

    <style name="TextItemHeaderStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:fontFamily">@font/luxstay_medium</item>
    </style>

    <style name="TextListingInfo">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="fontFamily">@font/luxstay_bold</item>
    </style>

    <style name="TextStyleBodyLine1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">@font/luxstay_bold</item>
    </style>

    <style name="TextStyleBodyLine2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">@font/luxstay_book</item>
    </style>

    <style name="TextStyleBottomSheetAction">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fffa7525</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_bottom_sheet_action</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:fontFamily">@font/luxstay_medium</item>
        <item name="android:layout_marginStart">@dimen/dimen_8dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8dp</item>
    </style>

    <style name="TextStyleHeader1">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">@font/luxstay_bold</item>
    </style>

    <style name="TextStyleHeader2">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">@font/luxstay_bold</item>
    </style>

    <style name="TextStyleItemList">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:fontFamily">@font/luxstay_book</item>
    </style>

    <style name="TextStyleNameListing">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">@font/luxstay_book</item>
    </style>

    <style name="TextStyleOfferHeader">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:fontFamily">@font/luxstay_medium</item>
    </style>

    <style name="TextStyleOfferHeaderRight">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:fontFamily">@font/luxstay_medium</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="TextStyleOfferSubHeader">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:fontFamily">@font/luxstay_book</item>
    </style>

    <style name="TextStyleOfferSubHeaderRight">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:fontFamily">@font/luxstay_book</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="TextStyleSpinnerItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="fontFamily">@font/luxstay_book</item>
    </style>

    <style name="TextStyleSubHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ff484848</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">@font/luxstay_bold</item>
    </style>

    <style name="line2">
        <item name="android:background">#ffcdcdcd</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="style_edt_default">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff484848</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DatePicker" parent="@android:style/Widget.DatePicker">
        <item name="colorAccent">@color/colorAzureRadiance</item>
    </style>

    <style name="default_margin">20dp</style>
</resources>
